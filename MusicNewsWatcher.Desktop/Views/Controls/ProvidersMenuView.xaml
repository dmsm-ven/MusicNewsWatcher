<UserControl
    x:Class="MusicNewsWatcher.Desktop.Views.ProvidersMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ss="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
    xmlns:vm="clr-namespace:MusicNewsWatcher.Desktop.ViewModels.Windows"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="200"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <Grid>
        <ItemsControl
            MinWidth="100"
            Padding="8,0"
            HorizontalContentAlignment="Stretch"
            ItemsSource="{Binding MusicProviders}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <DockPanel HorizontalAlignment="Right" LastChildFill="True">
                        <Grid DockPanel.Dock="Right">
                            <Ellipse
                                Width="20"
                                Height="20"
                                Stroke="LightGray"
                                StrokeThickness="1" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                d:Text="4"
                                FontFamily="Consolas"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding TrackedArtistsCount}" />
                        </Grid>

                        <Button
                            Height="24"
                            Background="Transparent"
                            Command="{Binding ChangeSelectedArtistCommand}"
                            CommandParameter="{Binding}"
                            Content="{Binding Name}"
                            DockPanel.Dock="Left"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{Binding IsActiveProvider, ConverterParameter='Yellow;White', Converter={StaticResource BoolToForegroundColorConverter}}"
                            Style="{StaticResource ToolButtonStyle}" />

                    </DockPanel>

                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Margin="2" IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>

</UserControl>
