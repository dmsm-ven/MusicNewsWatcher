<UserControl x:Class="MusicNewsWatcher.Desktop.Views.Controls.AlbumView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicNewsWatcher.Desktop.Views.Controls"
             xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:beh="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:vm="clr-namespace:MusicNewsWatcher.Desktop.ViewModels.Items"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False,Type={x:Type vm:AlbumViewModel}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Margin="2 2 4 12" 
    BorderBrush="{Binding IsActiveAlbum, Converter={StaticResource BoolToForegroundColorConverter}, 
ConverterParameter='Yellow;Gray'}" 
    BorderThickness="2" 
    CornerRadius="0">
        <Border.Effect>
            <DropShadowEffect Color="LightGray"/>
        </Border.Effect>
        <Grid>
            <beh:Interaction.Triggers>
                <beh:EventTrigger EventName="PreviewMouseDown">
                    <beh:InvokeCommandAction Command="{Binding SelectThisAlbumCommand}" />
                </beh:EventTrigger>
            </beh:Interaction.Triggers>

            <Button Style="{StaticResource ToolButtonStyle}"
                Visibility="{Binding IsChecked, Converter={StaticResource NotNullToVisibilityConverter}, FallbackValue=Hidden}"
                Command="{Binding ToggleMultiselectStateCommand}"
                Panel.ZIndex="99"
                VerticalAlignment="Top"
                HorizontalAlignment="Left">
                <icons:PackIconFontAwesome 
                Kind="{Binding CurrentMultiselectStateIcon}" 
                Foreground="White"
                               Style="{StaticResource SmallIconSize}"/>
            </Button>


            <Image Source="{Binding CachedImage, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToImageSourceConverter}}" 
               Width="120" Height="120" 
               Stretch="UniformToFill">
            </Image>
            <ProgressBar Opacity="0.5" 
                     Panel.ZIndex="99"
                         d:IsIndeterminate="False"
                     IsIndeterminate="True"
                     Visibility="{Binding InProgress, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <Button Style="{StaticResource ToolButtonStyle}"
            Command="{Binding OpenInBrowserCommand}"
            CommandParameter="{Binding Uri}"
            Panel.ZIndex="99"
        HorizontalAlignment="Right" VerticalAlignment="Top">
                <icons:PackIconFontAwesome Kind="LinkSolid" 
                                       Style="{StaticResource SmallIconSize}"/>
            </Button>

            <Label Content="{Binding Title}"
                       Foreground="White"
                       FontSize="11"
                       MaxWidth="120"
                       Margin="0"
                       FontWeight="Bold"
                       Background="#7f000000"
                       VerticalAlignment="Bottom" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"/>
        </Grid>
    </Border>
</UserControl>
