<UserControl
    x:Class="MusicNewsWatcher.Desktop.Views.TrackedArtistsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:beh="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:MusicNewsWatcher.Desktop.ViewModels.Items"
    d:DataContext="{d:DesignInstance Type={x:Type vm:MusicProviderViewModel},
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="650"
    mc:Ignorable="d">
    <ScrollViewer
        HorizontalAlignment="Stretch"
        HorizontalContentAlignment="Center"
        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
        ScrollViewer.VerticalScrollBarVisibility="Auto">
        <ItemsControl Grid.Row="1" ItemsSource="{Binding TrackedArtists, UpdateSourceTrigger=PropertyChanged}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border
                        Margin="2,2,4,12"
                        BorderBrush="{Binding IsActiveArtist, Converter={StaticResource BoolToForegroundColorConverter}, ConverterParameter='Yellow;Gray'}"
                        BorderThickness="2"
                        CornerRadius="0">
                        <Border.Effect>
                            <DropShadowEffect Color="LightGray" />
                        </Border.Effect>

                        <Grid>
                            <beh:Interaction.Triggers>
                                <beh:EventTrigger EventName="PreviewMouseDown">
                                    <beh:InvokeCommandAction Command="{Binding SelectThisArtistCommand}" />
                                </beh:EventTrigger>
                            </beh:Interaction.Triggers>

                            <Button
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Panel.ZIndex="99"
                                Command="{Binding OpenInBrowserCommand}"
                                CommandParameter="{Binding Uri}"
                                Style="{StaticResource ToolButtonStyle}">
                                <icons:PackIconFontAwesome Kind="LinkSolid" Style="{StaticResource LinkIconSize}" />
                            </Button>

                            <Image
                                Width="200"
                                Height="200"
                                Source="{Binding CachedImage}"
                                Stretch="Uniform" />
                            <Label
                                Margin="0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom"
                                HorizontalContentAlignment="Left"
                                Background="#7f000000"
                                Content="{Binding Name}"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="White" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Center" IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
